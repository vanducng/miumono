{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "packages/core": {
      "release-type": "python",
      "package-name": "miu-core",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "generic",
          "path": "pyproject.toml",
          "glob": false
        }
      ]
    },
    "packages/code": {
      "release-type": "python",
      "package-name": "miu-code",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "generic",
          "path": "pyproject.toml",
          "glob": false
        }
      ]
    },
    "packages/examples": {
      "release-type": "python",
      "package-name": "miu-examples",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "generic",
          "path": "pyproject.toml",
          "glob": false
        }
      ]
    },
    "packages/studio": {
      "release-type": "python",
      "package-name": "miu-studio",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "generic",
          "path": "pyproject.toml",
          "glob": false
        }
      ]
    },
    "packages/miu": {
      "release-type": "python",
      "package-name": "miu-mono",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "generic",
          "path": "pyproject.toml",
          "glob": false
        }
      ]
    }
  },
  "separate-pull-requests": true,
  "include-component-in-tag": true,
  "tag-separator": "-",
  "pull-request-title-pattern": "chore(${component}): release ${version}",
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "perf", "section": "Performance Improvements"},
    {"type": "refactor", "section": "Code Refactoring"},
    {"type": "docs", "section": "Documentation", "hidden": true},
    {"type": "chore", "section": "Miscellaneous", "hidden": true}
  ]
}
